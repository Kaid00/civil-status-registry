head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
 
  link(rel='stylesheet' href='styles/tailwind.css')
  title=title
  link(href='https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap' rel='stylesheet')
  // Favicon
  link(rel='icon' href='images/Favicon.png' type='image/png')
.flex.h-screen.bg-gray-800
  // Desktop sidebar ===========================
  aside.z-20.flex-shrink-0.w-60.pl-2.overflow-y-auto.bg-gray-800(class='md:block')
    div
      .text-white
        .flex.p-2.bg-gray-800
          a.flex.py-3.px-2.items-center(href="/")
            p.text-2xl.text-green-500.font-semibold.border-r-2.pr-1.mr-1 CRS
            |                                 CIVIL REGISTRY
            p

        
        .flex.justify-center
          div
            img.h-24.w-24.rounded-full.object-cover.mr-2.border-4.border-green-400(class='sm:block' src=`images/${user.photo}` alt='user-profile')
            p.font-bold.text-base.text-green-400.pt-2.text-center.w-24=user.name
        div
          ul.mt-6.leading-10
            li.relative.px-2.py-1
              a.inline-flex.items-center.w-full.text-sm.font-semibold.text-white.transition-colors.duration-150.cursor-pointer(class='hover:text-green-500' href='/dashboard')
                svg.h-6.w-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke='currentColor')
                  path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6')
                span.ml-4 DASHBOARD

            // CREATE ========================

            li#create.relative.px-2.py-1
              .inline-flex.items-center.justify-between.w-full.text-base.font-semibold.transition-colors.duration-150.text-gray-500.cursor-pointer(class='hover:text-yellow-400')
                span.inline-flex.items-center.text-sm.font-semibold.text-white(class='hover:text-green-400')
                  svg.w-6.h-6(fill='currentColor' viewbox='0 0 20 20' xmlns='http://www.w3.org/2000/svg')
                    path(fill-rule='evenodd' d='M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z' clip-rule='evenodd')
                  span.ml-4 CREATE

                // CLOSED ARROW

                svg#closed_btn1.ml-1.text-white.w-4.h-4(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke='currentColor')
                  path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M15 19l-7-7 7-7')

                // OPENED ARROW

                svg#open_btn1.hidden.ml-1.text-white.w-4.h-4(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke='currentColor')
                  path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M19 9l-7 7-7-7')
              div.hidden#options1
                ul.p-2.mt-2.space-y-2.overflow-hidden.text-sm.font-medium.rounded-md.shadow-inner.bg-green-400(aria-label='submenu')
                  li.px-2.py-1.text-white.transition-colors.duration-150
                    .px-1.rounded-md(class='hover:text-gray-800 hover:bg-gray-100')
                      .flex.items-center
                        svg.h-5.w-5(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke='currentColor')
                          path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6')
                        a.w-full.ml-2.text-sm.font-semibold.text-white(href='/birth' class='hover:text-gray-800')
                          | BIRTH
                  li.px-2.py-1.text-white.transition-colors.duration-150
                    .px-1.rounded-md(class='hover:text-gray-800 hover:bg-gray-100')
                      .flex.items-center
                        svg.w-5.h-5(fill='currentColor' viewbox='0 0 20 20' xmlns='http://www.w3.org/2000/svg')
                          path(d='M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z')
                        a.w-full.ml-2.text-sm.font-semibold.text-white(href='/marriage' class='hover:text-gray-800')
                          | MARRIAGE

            // UPLOAD --==================

            li#upload.relative.px-2.py-1
              .inline-flex.items-center.justify-between.w-full.text-base.font-semibold.transition-colors.duration-150.text-gray-500.cursor-pointer(class='hover:text-yellow-400')
                span.inline-flex.items-center.text-sm.font-semibold.text-white(class='hover:text-green-400')
                  svg.h-6.w-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke='currentColor')
                    path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M8 4H6a2 2 0 00-2 2v12a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-2m-4-1v8m0 0l3-3m-3 3L9 8m-5 5h2.586a1 1 0 01.707.293l2.414 2.414a1 1 0 00.707.293h3.172a1 1 0 00.707-.293l2.414-2.414a1 1 0 01.707-.293H20')
                  span.ml-4 UPLOAD
                // closed-arrow
                svg#closed_btn2.ml-1.text-white.w-4.h-4(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke='currentColor')
                  path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M15 19l-7-7 7-7')
                // open arrow
                svg#open_btn2.hidden.ml-1.text-white.w-4.h-4(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke='currentColor')
                  path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M19 9l-7 7-7-7')
              // UPLOAD DROPDOWN
              div.hidden#options2
                ul.p-2.mt-2.space-y-2.overflow-hidden.text-sm.font-medium.rounded-md.shadow-inner.bg-green-400(aria-label='submenu')
                  li.px-2.py-1.text-white.transition-colors.duration-150
                    .px-1.rounded-md(class='hover:text-gray-800 hover:bg-gray-100')
                      .flex.items-center
                        svg.h-5.w-5(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke='currentColor')
                          path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6')
                        a.w-full.ml-2.text-sm.font-semibold.text-white(href='/upload' class='hover:text-gray-800')
                          | BIRTH
                  li.px-2.py-1.text-white.transition-colors.duration-150
                    .px-1.rounded-md(class='hover:text-gray-800 hover:bg-gray-100')
                      .flex.items-center
                        svg.w-5.h-5(fill='currentColor' viewbox='0 0 20 20' xmlns='http://www.w3.org/2000/svg')
                          path(d='M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z')
                        a.w-full.ml-2.text-sm.font-semibold.text-white(href='/upload' class='hover:text-gray-800')
                          | MARRIAGE
            li#print.flex.items-center
              .inline-flex.items-center.justify-between.w-full.text-base.font-semibold.transition-colors.duration-150.text-gray-500.cursor-pointer(class='hover:text-yellow-400')
                button.bg-green-600.h-12.w-64.rounded-xl.transition-colors.duration-150(class='hover:bg-green-500 focus:outline-none')
                  span.inline-flex.items-center.text-sm.font-semibold.text-white(class='hover:text-green-400')
                    svg.h-6.w-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke='currentColor')
                      path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z')
                    span.ml-4 PRINT
                
  // Mobile sidebar ==================================================
  // Backdrop
  .flex.flex-col.flex-1.w-full.overflow-y-auto
    header.z-40.py-4.bg-gray-800
      .flex.items-center.justify-between.h-8.px-6.mx-auto
        // Mobile hamburger
        button.p-1.mr-5.-ml-1.rounded-md(class='md:hidden focus:outline-none focus:shadow-outline-purple' @click='toggleSideMenu' aria-label='Menu')
          x-heroicon-o-menu.w-6.h-6.text-white
            svg.w-6.h-6.text-white(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke='currentColor')
              path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M4 6h16M4 12h16M4 18h7')
        // Search Input
        .flex.justify-center.mt-2.mr-4
          .relative.flex.w-full.flex-wrap.items-stretch.mb-3
            input.form-input.px-3.py-2.placeholder-gray-400.text-gray-700.relative.bg-white.rounded-lg.text-sm.shadow.outline-none.w-full.pr-10(type='search' placeholder='Search'  class='focus:outline-none focus:shadow-outline')
            span.z-10.h-full.leading-snug.font-normal.text-center.text-gray-400.absolute.bg-transparent.rounded.text-base.items-center.justify-center.w-8.right-0.pr-3.py-3
              svg.h-5.w-5.-mt-1(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke='currentColor')
                path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z')
        ul.flex.items-center.flex-shrink-0.space-x-6
          // Notifications menu
          li.relative
            button.p-2.bg-white.text-green-400.align-middle.rounded-full(class='hover:text-white hover:bg-green-400 focus:outline-none' @click='toggleNotificationsMenu' @keydown.escape='closeNotificationsMenu' aria-label='Notifications' aria-haspopup='true')
              .flex.items-cemter
                svg.h-6.w-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke='currentColor')
                  path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9')
              // Notification badge
              span.absolute.top-0.right-0.inline-block.w-3.h-3.transform.translate-x-1.-translate-y-1.bg-red-600.border-2.border-white.rounded-full(class='dark:border-gray-800')
            div.hidden
              ul.absolute.right-0.w-56.p-2.mt-2.space-y-2.text-gray-600.bg-green-400.border.border-green-500.rounded-md.shadow-md
                li.flex
                  a.text-white.inline-flex.items-center.justify-between.w-full.px-2.py-1.text-sm.font-semibold.transition-colors.duration-150.rounded-md(class='hover:bg-gray-100 hover:text-gray-800' href='#')
                    span Messages
                    span.inline-flex.items-center.justify-center.px-2.py-1.text-xs.font-bold.leading-none.text-red-600.bg-red-100.rounded-full(class='dark:text-red-100 dark:bg-red-600')
                      | 13
          // Profile menu
          li.relative
            button#profile_btn.p-2.bg-white.text-green-400.align-middle.rounded-full(class='hover:text-white hover:bg-green-400 focus:outline-none' @click='toggleProfileMenu' @keydown.escape='closeProfileMenu' aria-label='Account' aria-haspopup='true')
              .flex.items-center
                svg.h-6.w-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke='currentColor')
                  path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z')
                  path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M15 12a3 3 0 11-6 0 3 3 0 016 0z')
            // Profle button
            div#profile.hidden
              ul.absolute.right-0.w-56.p-2.mt-2.space-y-2.text-gray-600.bg-green-400.border.border-green-500.rounded-md.shadow-md(aria-label='submenu')
                li.flex
                  a.text-white.inline-flex.items-center.w-full.px-2.py-1.text-sm.font-semibold.transition-colors.duration-150.rounded-md(class='hover:bg-gray-100 hover:text-gray-800' href='#')
                    svg.w-5.h-5.mr-2(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke='currentColor')
                      path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z')
                    span Profile
                li.flex
                  a.text-white.inline-flex.items-center.w-full.px-2.py-1.text-sm.font-semibold.transition-colors.duration-150.rounded-md(class='hover:bg-gray-100 hover:text-gray-800' href='#')
                    svg.w-5.h-5.mr-2(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke='currentColor')
                      path(stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1')
                    span Log out

